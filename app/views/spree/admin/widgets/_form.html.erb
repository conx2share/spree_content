
<div class="row">
  <div class="col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, :class => "form-control" %>
      <%= f.error_message_on :name %>
    <% end %>
    <%= f.select :klass, options_for_select(@widget_types.map{ |type| [type.to_s, type.to_s.split('::').last.downcase] }) if defined?(@widget_types) %>
  </div>
</div>
<% if params.has_key?(:widget) || !defined?(@widget_types) %>
  <div class="row">
    <div class="col-md-12">
      <%= f.field_container :value, class: ['form-group'] do %>
        <%= f.label :value, Spree.t(:value) %> <span class="required">*</span>
        <%= f.text_area :value, rows: 13, class: %w(form-control) %>
      <% end %>
    </div>
  </div>
<% end %>