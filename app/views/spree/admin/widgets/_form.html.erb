
<div class="row">
  <div class="col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, :class => "form-control" %>
      <%= f.error_message_on :name %>
    <% end %>
    <%= hidden_field_tag 'widget[klass]', @widget.instance.class.to_s.split('::').last.downcase %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= f.field_container :value, class: ['form-group'] do %>
      <%= f.label :value, Spree.t(:value) %> <span class="required">*</span>
      <textarea name="widget[value]" class="form-control" rows="13"><%= @widget.instance.hashify.to_yaml %></textarea>
    <% end %>
  </div>
</div>
